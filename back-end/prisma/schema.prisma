generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id  String @id @default(uuid())
  createdAt DateTime @default(now())
  role String
  name String
  email String @unique
  password String
  Schedule Schedule[]
  refreshToken refreshToken?
  @@map("users")
}

model refreshToken {
  id String @id @default(uuid())
  expiresIn DateTime
  user_id  String  @unique
  user users @relation(fields: [user_id], references: [id]) 
  @@map("refresh_token")
}

model rooms {
  id String @id @default(uuid())
  name String @unique
  Schedule Schedule[]
}

model Schedule {
  id  String @id @default(uuid())
  date DateTime 
  teacher_id String
  room_id String 
  teacher users @relation(fields: [teacher_id], references: [id])
  schedule rooms @relation(fields: [room_id], references: [id])
  
  @@map("schedule")
}