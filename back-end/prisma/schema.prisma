generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id  String @id @default(uuid())
  createdAt DateTime @default(now())
  role String
  name String
  email String @unique
  password String
  Schedule Schedule[]
}

model Schedule {
  id  String @id @default(uuid())
  room String
  date DateTime
  teacher_id String 
  teacher Users @relation(fields: [teacher_id], references: [id])
}